<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <!-- 附件类型图标/缩略图 -->
        <ImageView
            android:id="@+id/imageAttachmentType"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/bg_attachment_icon"
            android:contentDescription="@string/attachment_icon"
            android:scaleType="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_attach" />

        <!-- 附件信息区域 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonPreviewAttachment"
            app:layout_constraintStart_toEndOf="@+id/imageAttachmentType"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textAttachmentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:singleLine="true"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                tools:text="文档.pdf" />

            <TextView
                android:id="@+id/textAttachmentInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                tools:text="PDF • 1.2MB" />

        </LinearLayout>

        <!-- 操作按钮区域 -->
        <ImageButton
            android:id="@+id/buttonPreviewAttachment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/preview"
            android:src="@drawable/ic_preview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/buttonRemoveAttachment"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_primary" />

        <ImageButton
            android:id="@+id/buttonRemoveAttachment"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/remove"
            android:src="@drawable/ic_close"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/text_primary" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView> 